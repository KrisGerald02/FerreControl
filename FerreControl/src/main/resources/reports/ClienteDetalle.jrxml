<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="ClienteDetalle" language="java"
              pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20"
              whenNoDataType="AllSectionsNoDetail">

    <!-- Parámetros: deben coincidir con la acción PrintCustomerAction -->
    <parameter name="cedula"         class="java.lang.String"/>
    <parameter name="nombres"        class="java.lang.String"/>
    <parameter name="apellidos"      class="java.lang.String"/>
    <parameter name="nombreCompleto" class="java.lang.String"/>
    <parameter name="departamento"   class="java.lang.String"/>
    <parameter name="direccion"      class="java.lang.String"/>
    <parameter name="correo"         class="java.lang.String"/>
    <parameter name="telefono"       class="java.lang.String"/>
    <parameter name="estado"         class="java.lang.String"/>

    <background>
        <band/>
    </background>

    <title>
        <band height="320">

            <!-- ENCABEZADO PRINCIPAL (igual estilo que Productos) -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="100"
                               backcolor="#EEEEEE" mode="Opaque"/>
            </rectangle>

            <!-- Logo -->
            <image>
                <reportElement x="20" y="10" width="60" height="60"/>
                <imageExpression class="java.lang.String"><![CDATA["C:/Users/intim/Downloads/logo_ferreteria.jpg"]]></imageExpression>
            </image>

            <!-- Nombre ferretería -->
            <staticText>
                <reportElement x="100" y="20" width="350" height="25"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Ferretería Vanessa]]></text>
            </staticText>

            <!-- Subtítulo -->
            <staticText>
                <reportElement x="100" y="45" width="350" height="20"/>
                <textElement textAlignment="Center">
                    <font size="11" isItalic="true"/>
                </textElement>
                <text><![CDATA[Ficha detallada de cliente]]></text>
            </staticText>

            <!-- Ubicación -->
            <staticText>
                <reportElement x="100" y="70" width="70" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Ubicación:]]></text>
            </staticText>
            <staticText>
                <reportElement x="170" y="70" width="360" height="12"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <text><![CDATA[La Dalia, Matagalpa (De la Alcaldía de la Dalia media cuadra arriba)]]></text>
            </staticText>

            <!-- Teléfono ferretería -->
            <staticText>
                <reportElement x="100" y="84" width="70" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Teléfono:]]></text>
            </staticText>
            <staticText>
                <reportElement x="170" y="84" width="120" height="12"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <text><![CDATA[+505 8624 4743]]></text>
            </staticText>

            <!-- Fecha emisión -->
            <staticText>
                <reportElement x="355" y="84" width="80" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy">
                <reportElement x="440" y="84" width="100" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>

            <!-- Línea separadora debajo del encabezado -->
            <line>
                <reportElement x="0" y="105" width="555" height="1" forecolor="#999999"/>
            </line>

            <!-- Título de sección -->
            <staticText>
                <reportElement x="0" y="115" width="200" height="20"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Datos del cliente]]></text>
            </staticText>

            <!-- Caja general -->
            <rectangle>
                <reportElement x="0" y="140" width="555" height="160"
                               forecolor="#CCCCCC" backcolor="#FFFFFF" mode="Opaque"/>
            </rectangle>

            <!-- LÍNEA VERTICAL DIVISORIA (mitad de la caja) -->
            <line>
                <reportElement x="275" y="140" width="1" height="160" forecolor="#CCCCCC"/>
            </line>

            <!-- ===== COLUMNA IZQUIERDA: INFORMACIÓN GENERAL ===== -->
            <staticText>
                <reportElement x="10" y="150" width="200" height="15"/>
                <textElement>
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Información general]]></text>
            </staticText>

            <!-- Cédula -->
            <textField>
                <reportElement x="10" y="170" width="260" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Cédula: " + $P{cedula}]]></textFieldExpression>
            </textField>

            <!-- Nombre completo -->
            <textField>
                <reportElement x="10" y="188" width="260" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Nombre completo: " + $P{nombreCompleto}]]></textFieldExpression>
            </textField>

            <!-- Estado -->
            <textField>
                <reportElement x="10" y="206" width="260" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Estado: " + $P{estado}]]></textFieldExpression>
            </textField>

            <!-- Departamento -->
            <textField>
                <reportElement x="10" y="224" width="260" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Departamento: " + $P{departamento}]]></textFieldExpression>
            </textField>

            <!-- ===== COLUMNA DERECHA: CONTACTO ===== -->
            <staticText>
                <reportElement x="290" y="150" width="200" height="15"/>
                <textElement>
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Información de contacto]]></text>
            </staticText>

            <!-- Correo -->
            <textField>
                <reportElement x="290" y="170" width="250" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Correo: " + $P{correo}]]></textFieldExpression>
            </textField>

            <!-- Teléfono -->
            <textField>
                <reportElement x="290" y="188" width="250" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Teléfono: " + $P{telefono}]]></textFieldExpression>
            </textField>

            <!-- Dirección (multilínea) -->
            <textField isStretchWithOverflow="true">
                <reportElement x="290" y="206" width="250" height="70"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Dirección: " + $P{direccion}]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <detail>
        <band height="1"/>
    </detail>

    <!-- Pie de página -->
    <pageFooter>
        <band height="30">
            <line>
                <reportElement x="0" y="0" width="555" height="1" forecolor="#999999"/>
            </line>

            <staticText>
                <reportElement x="0" y="5" width="350" height="15"/>
                <textElement>
                    <font size="9" isItalic="true"/>
                </textElement>
                <text><![CDATA[Reporte generado por el sistema FerreControl – Gestión de clientes]]></text>
            </staticText>

            <textField>
                <reportElement x="400" y="5" width="155" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER} + " de 1"]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
