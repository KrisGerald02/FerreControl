<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="FacturasListado" language="java"
              pageWidth="842" pageHeight="595" columnWidth="802"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Campos que vienen de la entidad Factura -->
    <field name="numeroFactura"        class="java.lang.String"/>
    <field name="fechaDate"            class="java.util.Date"/>
    <field name="clienteNombre"        class="java.lang.String"/>
    <field name="importeTotal"         class="java.math.BigDecimal"/>
    <field name="importeTotalConIVA"   class="java.math.BigDecimal"/>

    <background>
        <band/>
    </background>

    <!-- ================= TÍTULO / ENCABEZADO ================= -->
    <title>
        <band height="120">

            <!-- Fondo encabezado -->
            <rectangle>
                <reportElement x="0" y="0" width="802" height="80"
                               backcolor="#F5F5F5" mode="Opaque"/>
            </rectangle>

            <!-- Logo -->
            <image>
                <reportElement x="20" y="10" width="60" height="60"/>
                <!-- Ajusta la ruta a tu logo -->
                <imageExpression class="java.lang.String"><![CDATA["C:/Users/intim/Downloads/logo_ferreteria.jpg"]]></imageExpression>
            </image>

            <!-- Nombre ferretería -->
            <staticText>
                <reportElement x="100" y="20" width="350" height="24"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Ferretería Vanessa]]></text>
            </staticText>

            <!-- Subtítulo -->
            <staticText>
                <reportElement x="100" y="45" width="350" height="18"/>
                <textElement textAlignment="Left">
                    <font size="11" isItalic="true"/>
                </textElement>
                <text><![CDATA[Listado general de facturas]]></text>
            </staticText>

            <!-- Fecha de emisión -->
            <staticText>
                <reportElement x="620" y="20" width="60" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy">
                <reportElement x="680" y="20" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>

            <!-- Línea separadora -->
            <line>
                <reportElement x="0" y="90" width="802" height="1" forecolor="#999999"/>
            </line>

        </band>
    </title>

    <!-- ================= ENCABEZADO DE COLUMNAS ================= -->
    <columnHeader>
        <band height="25">

            <rectangle>
                <reportElement x="0" y="0" width="802" height="25"
                               backcolor="#EFEFEF" mode="Opaque"/>
            </rectangle>

            <!-- N° factura -->
            <staticText>
                <reportElement x="0" y="5" width="140" height="15"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Número de factura]]></text>
            </staticText>

            <!-- Fecha -->
            <staticText>
                <reportElement x="150" y="5" width="90" height="15"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha]]></text>
            </staticText>

            <!-- Cliente -->
            <staticText>
                <reportElement x="250" y="5" width="260" height="15"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Cliente]]></text>
            </staticText>

            <!-- Importe total sin IVA -->
            <staticText>
                <reportElement x="520" y="5" width="130" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Monto total]]></text>
            </staticText>

            <!-- Importe total con IVA -->
            <staticText>
                <reportElement x="660" y="5" width="140" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Monto total c/ IVA]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETALLE: cada factura ================= -->
    <detail>
        <band height="18">

            <line>
                <reportElement x="0" y="17" width="802" height="1" forecolor="#DDDDDD"/>
            </line>

            <!-- N° factura -->
            <textField>
                <reportElement x="0" y="2" width="140" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{numeroFactura}]]></textFieldExpression>
            </textField>

            <!-- Fecha -->
            <textField pattern="dd/MM/yyyy">
                <reportElement x="150" y="2" width="90" height="14"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fechaDate}]]></textFieldExpression>
            </textField>

            <!-- Cliente -->
            <textField>
                <reportElement x="250" y="2" width="260" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{clienteNombre}]]></textFieldExpression>
            </textField>

            <!-- Monto total sin IVA -->
            <textField pattern="C$ #,##0.00">
                <reportElement x="520" y="2" width="130" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{importeTotal}]]></textFieldExpression>
            </textField>

            <!-- Monto total con IVA -->
            <textField pattern="C$ #,##0.00">
                <reportElement x="660" y="2" width="140" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{importeTotalConIVA}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PIE DE PÁGINA ================= -->
    <pageFooter>
        <band height="25">
            <line>
                <reportElement x="0" y="0" width="802" height="1" forecolor="#999999"/>
            </line>

            <staticText>
                <reportElement x="0" y="5" width="400" height="15"/>
                <textElement>
                    <font size="9" isItalic="true"/>
                </textElement>
                <text><![CDATA[Reporte de listado general de facturas – FerreControl]]></text>
            </staticText>

            <textField evaluationTime="Report">
                <reportElement x="600" y="5" width="200" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "Página " + $V{PAGE_NUMBER} + " de " + $V{MASTER_TOTAL_PAGES}
                ]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
