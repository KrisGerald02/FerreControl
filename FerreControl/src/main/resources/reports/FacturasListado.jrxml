<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="FacturasListado" language="java"
              pageWidth="842" pageHeight="595" columnWidth="802"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Campos que vienen de la entidad Factura -->
    <field name="numeroFactura"  class="java.lang.String"/>
    <field name="fechaDate"      class="java.util.Date"/>
    <field name="clienteNombre"  class="java.lang.String"/>
    <field name="subtotal"       class="java.math.BigDecimal"/>
    <field name="ivaCalculado"   class="java.math.BigDecimal"/>
    <field name="importeTotal"   class="java.math.BigDecimal"/>
    <field name="montoPagado"    class="java.math.BigDecimal"/>
    <field name="montoRestante"  class="java.math.BigDecimal"/>
    <field name="pagada"         class="java.lang.Boolean"/>

    <!-- Total general del reporte -->
    <variable name="TotalGeneral" class="java.math.BigDecimal"
              resetType="Report" calculation="Sum">
        <variableExpression><![CDATA[$F{importeTotal}]]></variableExpression>
    </variable>

    <background>
        <band/>
    </background>

    <!-- TÍTULO -->
    <title>
        <band height="140">

            <rectangle>
                <reportElement x="0" y="0" width="802" height="95"
                               backcolor="#F5F5F5" mode="Opaque"/>
            </rectangle>

            <!-- Logo -->
            <image>
                <reportElement x="20" y="10" width="60" height="60"/>
                <imageExpression class="java.lang.String"><![CDATA["C:/Users/intim/Downloads/logo_ferreteria.jpg"]]></imageExpression>
            </image>

            <!-- Nombre y subtítulo -->
            <staticText>
                <reportElement x="100" y="18" width="550" height="24"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Ferretería Vanessa]]></text>
            </staticText>

            <staticText>
                <reportElement x="100" y="42" width="550" height="18"/>
                <textElement textAlignment="Center">
                    <font size="12" isItalic="true"/>
                </textElement>
                <text><![CDATA[Listado general de facturas]]></text>
            </staticText>

            <!-- Ubicación -->
            <staticText>
                <reportElement x="100" y="64" width="80" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Ubicación:]]></text>
            </staticText>
            <staticText>
                <reportElement x="180" y="64" width="420" height="12"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <text><![CDATA[La Dalia, Matagalpa (De la Alcaldía de la Dalia media cuadra arriba)]]></text>
            </staticText>

            <!-- Teléfono -->
            <staticText>
                <reportElement x="100" y="78" width="80" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Teléfono:]]></text>
            </staticText>
            <staticText>
                <reportElement x="180" y="78" width="160" height="12"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <text><![CDATA[+505 8624 4743]]></text>
            </staticText>

            <!-- Fecha reporte -->
            <staticText>
                <reportElement x="620" y="72" width="80" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy">
                <reportElement x="705" y="72" width="80" height="15"/>
                <textElement textAlignment="Left">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>

            <!-- Línea -->
            <line>
                <reportElement x="0" y="105" width="802" height="1" forecolor="#999999"/>
            </line>

        </band>
    </title>

    <!-- ENCABEZADO DE COLUMNAS -->
    <columnHeader>
        <band height="25">

            <rectangle>
                <reportElement x="0" y="0" width="802" height="25"
                               backcolor="#EFEFEF" mode="Opaque"/>
            </rectangle>

            <staticText>
                <reportElement x="0" y="5" width="120" height="15"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Número factura]]></text>
            </staticText>

            <staticText>
                <reportElement x="120" y="5" width="80" height="15"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha]]></text>
            </staticText>

            <staticText>
                <reportElement x="200" y="5" width="220" height="15"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Cliente]]></text>
            </staticText>

            <staticText>
                <reportElement x="420" y="5" width="70" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Subtotal]]></text>
            </staticText>

            <staticText>
                <reportElement x="490" y="5" width="70" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[IVA]]></text>
            </staticText>

            <staticText>
                <reportElement x="560" y="5" width="80" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Total]]></text>
            </staticText>

            <staticText>
                <reportElement x="640" y="5" width="80" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Pagado]]></text>
            </staticText>

            <staticText>
                <reportElement x="720" y="5" width="40" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Pend.]]></text>
            </staticText>

            <staticText>
                <reportElement x="760" y="5" width="42" height="15"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Estado]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- DETALLE -->
    <detail>
        <band height="18">

            <line>
                <reportElement x="0" y="17" width="802" height="1" forecolor="#DDDDDD"/>
            </line>

            <textField>
                <reportElement x="0" y="2" width="120" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{numeroFactura}]]></textFieldExpression>
            </textField>

            <textField pattern="dd/MM/yyyy">
                <reportElement x="120" y="2" width="80" height="14"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fechaDate}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="200" y="2" width="220" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{clienteNombre}]]></textFieldExpression>
            </textField>

            <textField pattern="C$ #,##0.00">
                <reportElement x="420" y="2" width="70" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{subtotal}]]></textFieldExpression>
            </textField>

            <textField pattern="C$ #,##0.00">
                <reportElement x="490" y="2" width="70" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{ivaCalculado}]]></textFieldExpression>
            </textField>

            <textField pattern="C$ #,##0.00">
                <reportElement x="560" y="2" width="80" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{importeTotal}]]></textFieldExpression>
            </textField>

            <textField pattern="C$ #,##0.00">
                <reportElement x="640" y="2" width="80" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{montoPagado}]]></textFieldExpression>
            </textField>

            <textField pattern="C$ #,##0.00">
                <reportElement x="720" y="2" width="40" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{montoRestante}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="760" y="2" width="42" height="14"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{pagada} != null && $F{pagada} ? "Pagada" : "Pend."]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- PIE DE PÁGINA (debe ir ANTES de summary) -->
    <pageFooter>
        <band height="25">
            <line>
                <reportElement x="0" y="0" width="802" height="1" forecolor="#999999"/>
            </line>

            <staticText>
                <reportElement x="0" y="5" width="450" height="15"/>
                <textElement>
                    <font size="9" isItalic="true"/>
                </textElement>
                <text><![CDATA[Reporte de listado general de facturas – FerreControl]]></text>
            </staticText>

            <textField>
                <reportElement x="600" y="5" width="202" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER} + " de 1"]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <!-- RESUMEN (summary SIEMPRE después del pageFooter con este DTD) -->
    <summary>
        <band height="35">

            <line>
                <reportElement x="0" y="0" width="802" height="1" forecolor="#999999"/>
            </line>

            <staticText>
                <reportElement x="520" y="10" width="140" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Total general facturado:]]></text>
            </staticText>

            <textField pattern="C$ #,##0.00">
                <reportElement x="660" y="10" width="140" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TotalGeneral}]]></textFieldExpression>
            </textField>

        </band>
    </summary>

</jasperReport>
